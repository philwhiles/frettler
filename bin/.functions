execute() {
  echo
  echo $1
  echo
  eval $1
}

chooseScale() {
  allscales=`../frettler patterns -t scale | sed 's/ .*//' | sed 's/.*blues.*//'`
  read -r -d ' ' -a scales <<< "$allscales"
  echo
  n=0
  for scale in "${scales[@]}"; do
    echo "$n : $scale"
    n=`expr $n + 1`
  done
  echo

  echo -n "Enter the scale number : "
  read scalenum
  scale="${scales[$scalenum]}"
}

